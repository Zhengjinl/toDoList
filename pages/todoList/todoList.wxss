/* pages/todoList/todoList.wxss */
.title{
  width: 100%;
  height: 110rpx;
  line-height: 70rpx;
  padding: 20rpx;
  background: #fff;
  position: fixed;
  top: 0;
  z-index: 2;
  box-sizing: border-box;
  border-bottom: 1px solid #f5f5f5;
}
.title-icon{
  line-height: 0;
  margin-top: 10rpx;
}
.item-size{
  margin-left: 20rpx;
}
.todo-list{
  position: relative;
  margin: 110rpx 0 20rpx;
  /* overflow: auto; */
}
.list-date{
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
}
.list-box{
  background: #fff;
  line-height: 50rpx;
  padding: 0 20rpx;
}
.list-item{
  border-bottom: 1px solid #f5f5f5;
  padding: 20rpx;
}